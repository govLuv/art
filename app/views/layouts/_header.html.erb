<div id="header">
<h1>The Artist's War</h1>
<div id="navbar">
	<ul class="nav">
		<% if signed_in? %>
			<li><%= link_to 'Home', current_user %></li>
		<% else %>
			<li><%= link_to 'Home', root_path %></li>
			<li><%= link_to 'Register', join_path %></li>
		<% end %>
	</ul>

	<div class="signin">
	<% if signed_in? %> 
		<%= link_to "Sign out", signout_path, method: :delete %>
	<% else %>
			<%= form_for(:session, url: sessions_path) do |f| %>
				<%= f.text_field :name %>
				<%= f.password_field :password %>
				<%= hidden_field_tag :from_home?, current_page?(root_url) %>
				<%= f.submit "Sign in", class: "button" %>
			<% end %>
	<% end  %>
	</div>
</div>
</div>
